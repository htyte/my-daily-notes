<%- include('partials/header') -%> 

<div>
    
    <% notes.forEach(note => { %>
    <form action="/delete" method="POST">
        <input type="hidden" name="noteId" value="<%= note.id %>" onChange="this.form.submit()">
            <button type="submit" class="btn btn-outline-danger btn-sm" >Delete Note</button>
        </input>
</form>
    <h1><%= note.title %></h1>
    <p><%= note.content.substring(0,100) + "... " %><span><a href="posts/<%= note.title %>" >Read More</a></span></p>
    <% }) %>
    
</div>

<%- include('partials/footer') -%> 